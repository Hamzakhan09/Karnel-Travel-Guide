@model Karnel_Travel_Guide.Models.Resort
@{
    ViewBag.Title = "Resort_Detail";
    Layout = "~/Views/Shared/FrontEndLayout.cshtml";
}


<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/details/details.css" rel="stylesheet">
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">*@
</head>



<body>

    <section class="hero-wrap" style="background-image: url(/Content/images/resort-bg.jpg); height:400px;">
        <div class="overlay"></div>
    </section>






    <div class="container1 mt-5">
        <div class="card">
            <h5 class="card-header text-center" style="background-color: #673B31;">@Model.Resort_Name</h5>

            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="@Url.Content("~/Content/images/"+Model.Resort_Image)" class="w-100 h-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="@Url.Content("~/Content/images/"+Model.Resort_Image2)" class="d-block w-100 h-100" alt="...">
                                </div>

                                <div class="carousel-item">
                                    <img src="@Url.Content("~/Content/images/"+Model.Resort_Image3)" class="d-block w-100 h-100" alt="...">
                                </div>

                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="header1 mt-5">
                                    <div class="sub">
                                        <h3>Help &amp; Support</h3>
                                    </div>
                                    <div class="call">
                                        <h4 class="tour_help_1_call">Call Us Now</h4>
                                        <h4><i class="fa fa-phone" aria-hidden="true"></i> +92 048350035 </h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @*<div class="row">
                                            <div class="col-md-12">
                                                <h3 class="nich">Discription</h3>
                                                <p>@Model.Tour_Discription</p>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>*@


                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td><strong>Resort Name:</strong></td>
                                    <td class="event-res">@Model.Resort_Name</td>
                                </tr>

                                <tr>
                                    <td><strong>Resort Price Range :  </strong></td>
                                    <td class="event-res">PKR @Html.DisplayFor(modelItem => Model.Resort_PriceRange)</td>
                                </tr>
                                <tr>
                                    <td><strong>Resort Memberships  : </strong></td>
                                    <td class="event-res">@Model.Resort_Membership</td>
                                </tr>

                                <tr>
                                    <td><strong>Resort Facilities : </strong></td>
                                    <td class="event-res">@Model.Resort_Facilities</td>
                                </tr>
                                <tr>
                                    <td><strong>City:  </strong></td>
                                    <td class="event-res">@Model.City.City_Name</td>
                                </tr>

                            </tbody>
                        </table>
                        @{
                            if (Session["u_name"] != null)
                            {
                                @*<a href="@Url.Action("bookingcreate","Bookings")" class="btn btn-primary btn-lg">Book Now</a>*@
                                @Html.ActionLink("Book Now", "bookingcreate", "Bookings", null, new { @class = "btn btn-primary btn-lg" })

                            }
                            else
                            {
                                @Html.ActionLink("Book Now", "LogIn", "FrontEnd", null, new { @class = "btn btn-primary btn-lg" })
                            }
                        }
                    </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    @*<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>*@
</body>
